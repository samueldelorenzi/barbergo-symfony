{% extends 'base.html.twig' %}

{% block title %}BarberGO | Atualizar Perfil{% endblock %}

{% block stylesheets %}
    <style>
        .profile-edit-card {
            border-radius: 1rem;
            background: linear-gradient(to right, #f8f9fa, #ffffff);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .profile-edit-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
        }

        .form-label {
            font-weight: 600;
        }

        .section-title {
            font-size: 2rem;
            font-weight: bold;
        }

        .btn-custom {
            padding: 0.7rem 2rem;
            font-weight: 500;
        }

        .alert {
            font-size: 0.95rem;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-5 container col-10 col-lg-12 border my-4 shadow rounded p-3">
    <!-- Header -->
    <div class="text-center mb-5">
        <h2 class="section-title">üìù Atualizar Perfil</h2>
        <p class="text-muted">Edite suas informa√ß√µes de conta associadas a <strong>{{ user.email }}</strong></p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card profile-edit-card shadow-sm p-4">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} mt-2" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                <form method="post" action="{{ path('user_profile_edit') }}">
                    <div class="mb-3 pt-2">
                        <label for="name" class="form-label">Nome completo</label>
                        <input type="text" id="name" name="name" class="form-control" value="{{ user.name }}" required>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="email" class="form-control" value="{{ user.email }}" required>
                    </div>

                    <div class="d-grid gap-3 d-md-flex justify-content-md-center border-top pt-4 mt-4">
                        <button type="submit" class="btn btn-warning btn-custom">
                            <i class="bi bi-check2-circle me-2"></i> Salvar Altera√ß√µes
                        </button>
                        <a href="{{ path('user_profile_view') }}" class="btn btn-outline-secondary btn-custom">
                            <i class="bi bi-arrow-return-left me-1"></i> Voltar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
