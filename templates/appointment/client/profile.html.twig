{% extends 'base.html.twig' %}

{% block title %}BarberGO | Perfil
{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg">
                    <div class="bg-dark text-white text-center py-4 rounded-top">
                        <h1 class="display-5 fw-bold mb-0">{{ user.name }}</h1>
                        <p class="lead mb-0">{{ user.email }}</p>
                    </div>

                    <div class="card-body px-4 px-md-5 pt-0">

                        <div class="text-center mb-4 pt-3">
                            <h2 class="h4 text-muted">Informações do Perfil</h2>
                        </div>

                        <ul class="list-group list-group-flush mb-4">
                            <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                                <span class="fw-bold">Nome Completo</span>
                                <span class="text-end">{{ user.name }}</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                                <span class="fw-bold">Email</span>
                                <span class="text-end">{{ user.email }}</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                                <span class="fw-bold">Membro Desde</span>
                                <span class="text-end">{{ user.createdAt|date('d/m/Y') }}</span>
                            </li>
                        </ul>

                        <div class="d-grid gap-3 d-md-flex justify-content-md-center mt-4 pt-3 border-top">
                            <a href="{{ path('appointment_update_profile') }}" class="btn btn-warning px-4">
                                <i class="bi bi-pencil-square me-2"></i>
                                Editar Perfil
                            </a>
                            <a href="{{ path('appointment_update_password') }}" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-key-fill me-2"></i>
                                Alterar Senha
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
