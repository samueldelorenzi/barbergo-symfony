<html class="h-100" lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        {% block title %}BarberGO
        {% endblock %}
    </title>
    <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"> {% block stylesheets %}{% endblock %}
</head>
<body class="d-flex flex-column h-100">

<header>
    {% block header %}
        {% if is_granted('ROLE_ADMIN') %}
            {% include 'partials/_header_admin.html.twig' %}
        {% elseif is_granted('ROLE_BARBER') %}
            {% include 'partials/_header_barber.html.twig' %}
        {% elseif is_granted('ROLE_CLIENT') %}
            {% include 'partials/_header_user.html.twig' %}
        {% else %}
            {% include 'partials/_header_home.html.twig' %}
        {% endif %}
    {% endblock %}
</header>

<main class="flex-grow-1"> {% block body %}{% endblock %}
</main>

<footer class="bg-dark text-white pt-4 mt-auto">
    <div class="container">
        <div class="row text-center text-md-start">
            <div class="col-md-4 mb-4 mb-md-3">
                <h5 class="fw-bold text-uppercase">BarberGO</h5>
                <p class="text-white-50 small">Transformando seu corte em experiência. Reserve, corte, aproveite.</p>
            </div>
            <div class="col-md-4 mb-4 mb-md-3">
                <h6 class="fw-semibold text-uppercase">Links Rápidos</h6>
                <ul class="list-unstyled">
                    <li>
                        <a href="{{ path('home') }}" class="text-white text-decoration-none">Início</a>
                    </li>
                    <li>
                        <a href="{{ path('app_register') }}" class="text-white text-decoration-none">Cadastro</a>
                    </li>
                    <li>
                        <a href="{{ path('app_login') }}" class="text-white text-decoration-none">Login</a>
                    </li>
                </ul>
            </div>
            <div class="col-md-4 mb-4 mb-md-3">
                <h6 class="fw-semibold text-uppercase">Contato</h6>
                <p class="mb-2">
                    <i class="bi bi-envelope me-2"></i>contato@barbergo.com
                </p>
                <p class="mb-0">
                    <i class="bi bi-phone me-2"></i>(11) 99999-9999
                </p>
            </div>
        </div>

        <hr class="my-3">

        <div class="d-flex justify-content-between align-items-center flex-column flex-md-row pb-3">
            <p class="mb-3 mb-md-0 small text-white-50">© 2025 BarberGO. Todos os direitos reservados.</p>
            <div>
                <a href="#" class="text-white me-3 text-decoration-none fs-4">
                    <i class="bi bi-facebook"></i>
                </a>
                <a href="#" class="text-white text-decoration-none me-3 fs-4">
                    <i class="bi bi-instagram"></i>
                </a>
                <a href="#" class="text-white text-decoration-none fs-4">
                    <i class="bi bi-whatsapp"></i>
                </a>
            </div>
        </div>
    </div>
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
{% block javascripts %}
{% endblock %}
</body>
</html>
