{% extends 'base.html.twig' %}

{% block title %}Painel do Barbeiro{% endblock %}

{% block body %}
    <div class="container py-5">
        <h2 class="mb-4 text-center">Bem-vindo, {{ app.user.name }}!</h2>

        <div class="row g-4">
            <div class="col-md-4">
                <a href="{{ path('barber_barbershop_index') }}" class="text-decoration-none text-dark">
                    <div class="card text-center shadow-sm p-4">
                        <i class="bi bi-shop fs-1 mb-3 text-primary"></i>
                        <h5>Barbearia</h5>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="{{ path('barber_appointment_list') }}" class="text-decoration-none text-dark">
                    <div class="card text-center shadow-sm p-4">
                        <i class="bi bi-calendar-event fs-1 mb-3 text-success"></i>
                        <h5>Meus Agendamentos</h5>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="{{ path('user_profile_view') }}" class="text-decoration-none text-dark">
                    <div class="card text-center shadow-sm p-4">
                        <i class="bi bi-person-lines-fill fs-1 mb-3 text-secondary"></i>
                        <h5>Editar Perfil</h5>
                    </div>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
