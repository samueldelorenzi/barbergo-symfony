{% extends 'base.html.twig' %}

{% block title %}Barbergo | Usuário:
    {{ user.id }}
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center w-100">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h1 class="h3 mb-0 text-center">Usuário</h1>
                </div>
                <div class="card-body">
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Id:
                            {{ user.id }}</li>
                        <li class="list-group-item">Name:
                            {{ user.name }}</li>

                        <li class="list-group-item">Email:
                            {{ user.email }}</li>
                        <li class="list-group-item">Role:
                            {{ user.role }}</li>
                        <li class="list-group-item">Active:
                            {% if user.isActive() %}
                                <span class="badge bg-success">Ativo</span>
                            {% else %}
                                <span class="badge bg-danger">Inativo</span>
                            {% endif %}
                        </li>
                        <li class="list-group-item">Created at:
                            {{ user.getCreatedAt() }}</li>
                        <li class="list-group-item">Updated at:
                            {{ user.getUpdatedAt() }}</li>
                        <li class="list-group-item">
                            <div class="row justify-content-between">
                                <div class="col-auto">
                                    {{ include('components/button_default.html.twig', {
                                        'label': 'Voltar',
                                        'path': 'app_users_index',
                                        'icon': 'bi bi-arrow-left-circle me-1',
                                        'class': 'primary'
                                    }) }}
                                </div>
                                <div class="col-auto">
                                    {{ include('components/button_default.html.twig', {
                                        'label': 'Editar',
                                        'path': 'app_users_edit',
                                        'icon': 'bi bi-pencil-square me-1',
                                        'class': 'warning',
                                        'userId': user.id
                                    }) }}
                                    {{ include('users/_delete_form.html.twig') }}
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
