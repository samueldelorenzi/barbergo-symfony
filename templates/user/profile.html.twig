{% extends 'base.html.twig' %}

{% block title %}BarberGO | Meu Perfil{% endblock %}

{% block stylesheets %}
    <style>
        .profile-card {
            border-radius: 1rem;
            background: linear-gradient(to right, #f8f9fa, #ffffff);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .profile-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
        }

        .profile-icon {
            font-size: 2.5rem;
        }

        .profile-section h5 {
            font-weight: 600;
            margin-bottom: .5rem;
        }

        .btn-custom {
            padding: .7rem 2rem;
            font-weight: 500;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-5 container col-10 col-lg-12 border my-4 shadow rounded p-3">
    <!-- Boas-vindas -->
    <div class="text-center mb-5">
        <h2 class="dashboard-welcome">ðŸ‘¤ Perfil de {{ app.user.name }}</h2>
        <p class="text-muted">Confira e gerencie suas informaÃ§Ãµes de conta.</p>
    </div>

    <div class="row g-4">
        <!-- Card de informaÃ§Ãµes -->
        <div class="col-md-6 mx-auto">
            <div class="card profile-card shadow-sm p-4">
                <div class="text-center mb-4">
                    <i class="bi bi-person-circle text-secondary profile-icon"></i>
                </div>

                <div class="profile-section mb-3">
                    <h5>Nome Completo</h5>
                    <p class="text-muted">{{ app.user.name }}</p>
                </div>

                <div class="profile-section mb-3">
                    <h5>Email</h5>
                    <p class="text-muted">{{ app.user.email }}</p>
                </div>

                <div class="profile-section mb-4">
                    <h5>Membro desde</h5>
                    <p class="text-muted">{{ app.user.createdAt|date('d/m/Y') }}</p>
                </div>

                <div class="d-flex justify-content-center gap-3 border-top pt-4">
                    <a href="{{ path('user_profile_edit') }}" class="btn btn-warning btn-custom">
                        <i class="bi bi-pencil-square me-2"></i>Editar Perfil
                    </a>
                    <a href="{{ path('user_profile_change_password') }}" class="btn btn-outline-secondary btn-custom">
                        <i class="bi bi-key me-2"></i>Senha
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
